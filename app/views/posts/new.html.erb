<div class="form-wrapper">
    <div class="form-container">
        <h1 class="form-header">New post</h1>
        <%= form_with url: user_posts_path do |form| %>
            <div class="form-title">
                <%= form.label :title %>
                <%= form.text_field :title %>
            </div>
            <div class="form-text">
                <%= form.label :text %>
                <%= form.text_area :text %>
            </div>
            <div class="form-submit">
                <%= form.submit %>
            </div>
        <% end %>
    </div>
</div>